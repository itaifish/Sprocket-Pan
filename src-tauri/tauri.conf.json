{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "SprocketPan",
		"version": "1.1.2"
	},
	"tauri": {
		"updater": {
			"active": true,
			"dialog": true,
			"endpoints": ["https://github.com/itaifish/Sprocket-Pan/releases/latest/download/latest.json"],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERERDM2QjQwNDdGRkRGQTkKUldTcDMvOUhRR3ZUM2NYNmJMR040c3ZFdTljZitTSHR3eXd5eWdlNmU3elpIcjY1WlpCczhrY1AK"
		},
		"allowlist": {
			"all": false,
			"app": {
				"all": true,
				"hide": true,
				"show": true
			},
			"shell": {
				"all": false,
				"open": true
			},
			"fs": {
				"all": true,
				"scope": ["$APPDATA/**", "$APPLOCALDATA/**", "$APPLOCALDATA", "$APPLOCALDATA"]
			},
			"path": {
				"all": true
			},
			"os": {
				"all": true
			},
			"dialog": {
				"all": true,
				"ask": true,
				"confirm": true,
				"message": true,
				"open": true,
				"save": true
			},
			"http": {
				"all": true,
				"request": true,
				"scope": ["https://*", "http://*"]
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.sprocketpan.dev",
			"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "SprocketPan",
				"label": "main",
				"width": 1600,
				"height": 900,
				"minWidth": 1200,
				"minHeight": 675,
				"visible": false
			},
			{
				"width": 1600,
				"height": 900,
				"url": "splashscreen.html",
				"label": "splashscreen",
				"title": "SprocketPan"
			}
		]
	}
}
